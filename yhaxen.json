{
	"version": 1,

	"dependencies":
	[
		{
			"name":"munit",
			"version":"23afd32187",
			"source": "git@github.com:massiveinteractive/MassiveUnit.git",
			"type": "git",
			"classPath": "src",
			"scopes": ["test"]
		},
		{
			"name":"mcover",
			"version":"2.0.3",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		},
		{
			"name":"mconsole",
			"version":"1.6.0",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		},
		{
			"name":"mlib",
			"version":"2.0.2",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		}
	],

	"builds":
	[
		{
			"name": "main",
			"artifact": "src/main/haxe/run.n",
			"command": "haxe",
			"arguments": ["-main", "yhaxen.Main", "-neko", "${artifact}", "-cp", "src/main/haxe", "${dependencies}"]
		}
	],

	"tests":
	[
		{
			"command": "neko",
			"arguments": ["${dependency:munit:dir}/run.n", "test", "cliconfig", "src/test/haxe", "bin/test",
				"bin/test-report", "config:classPath=src/main/haxe", "config:coverageIgnoredClass=module",
				"target:main=TestMain", "target:lib=munit", "target:cp=src/main/haxe", "target:cp=src/test/haxe",
				"target:neko=bin/test/neko_test.n"]
		}
	],

	"releases":
	[
		{
			"type": "git",
			"files": ["src/main/haxe/haxelib.json", "src/main/haxe/run.n"]
		},
		{
			"type": "haxelib",
			"files": ["src/main/haxe/haxelib.json", "src/main/haxe/run.n", "src/main/haxe/yhaxen"]
		}
	]
}