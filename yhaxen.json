{
	"dependencies":
	[
		{
			"name":"munit",
			"version":"cf0c91a2c9",
			"source": "git@github.com:massiveinteractive/MassiveUnit.git",
			"type": "git",
			"classPath": "src",
			"scopes": ["test"]
		},
		{
			"name":"mcover",
			"version":"2.0.3",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		},
		{
			"name":"mconsole",
			"version":"1.6.0",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		},
		{
			"name":"mlib",
			"version":"2.0.2",
			"type": "haxelib",
			"scopes": ["test"],
			"forceVersion": true
		}
	],

	"builds":
	[
		{
			"name": "main",
			"artifact": "src/main/haxe/run.n",
			"command": "haxe",
			"arguments": ["-main", "yhaxen.Main", "-neko", "${build:artifact}", "-cp", "src/main/haxe",
				"${dependency:*:$dir:-cp}", "-D", "version=${arg:-version}"]
		}
	],

	"tests":
	[
		{
			"name": "test",
			"command": "neko",
			"arguments": ["${dependency:munit:$dir}/run.n", "test", "cliconfig", "src/test/haxe", "bin/test",
				"bin/test-report", "-result-exit-code", "config:classPath", "src/main/haxe",
				"config:coverageIgnoredClass", "module",
				"target:-main", "TestMain", "target:-cp", "src/main/haxe", "target:-cp", "src/test/haxe",
				"${dependency:*:$dir:target:-cp}", "target:-neko", "bin/test/neko_test.n"]
		}
	],

	"releases":
	[
		{
			"type": "git",
			"files": ["src/main/haxe/haxelib.json", "src/main/haxe/run.n"]
		},
		{
			"type": "haxelib",
			"files": ["src/main/haxe/haxelib.json", "src/main/haxe/run.n", "src/main/haxe/yhaxen"]
		}
	]
}